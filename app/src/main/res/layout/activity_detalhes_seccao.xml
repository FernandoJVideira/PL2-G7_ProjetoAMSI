<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#19B6B628"
    android:orientation="vertical"
    android:paddingLeft="60px"
    android:paddingTop="150px"
    android:paddingRight="60px"
    tools:context=".DetalhesSeccaoActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="327dp"
        android:background="#19B6B628"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textView3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="100px"
            android:text="Seçcão"
            android:textAlignment="center"
            android:textSize="34sp" />

        <TextView
            android:id="@+id/tvSeccaoNome"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="50px"
            android:text="XX"
            android:textAlignment="center"
            android:textSize="80sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="25px"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="350px"
                android:text="Cliente Atual :" />

            <TextView
                android:id="@+id/tvNumeroSenhaAtual"
                android:layout_width="35dp"
                android:layout_height="wrap_content"
                android:text="XX"
                android:textAlignment="center" />
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingTop="150px">

        <Button
            android:id="@+id/btTirarSenha"
            style="@style/Widget.AppCompat.Button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#BD9017"
            android:text="Tirar Senha" />
    </LinearLayout>

</LinearLayout>