<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#19B6B628"
    android:orientation="vertical"
    android:paddingLeft="30dp"
    android:paddingTop="30dp"
    android:paddingRight="30dp"
    tools:context=".Views.DetalhesSeccaoActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="327dp"
        android:background="#19B6B628"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tvSeccaoNome"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="50px"
            android:text="XX"
            android:textAlignment="center"
            android:textSize="50sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="25px"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="350px"
                android:text="@string/txt_cliente_atual" />

            <TextView
                android:id="@+id/tvNumeroSenhaAtual"
                android:layout_width="35dp"
                android:layout_height="wrap_content"
                android:text="XX"
                android:textAlignment="center" />
        </LinearLayout>
        <TextView
            android:id="@+id/tvTextoSenhaAtual"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="25dp"
            android:text="Sua senha"
            android:textAlignment="center"
            android:visibility="invisible"
            android:textSize="30sp" />
        <TextView
            android:id="@+id/tvSenha"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:text="XX"
            android:textAlignment="center"
            android:visibility="invisible"
            android:textSize="60sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingTop="150px">

        <Button
            android:id="@+id/btTirarSenha"
            style="@style/Widget.AppCompat.Button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#BD9017"
            android:text="Tirar Senha" />
    </LinearLayout>

</LinearLayout>